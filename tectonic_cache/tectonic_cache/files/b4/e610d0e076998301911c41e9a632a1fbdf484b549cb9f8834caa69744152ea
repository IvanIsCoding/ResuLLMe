  \shortdate[Roman]%
  \isotwodigitdayfalse
}
\DeclareRobustCommand*\shortromandate{%
  \shortdate[roman]%
  \isotwodigitdayfalse
}
\def\iso@isodash{-}%
\DeclareRobustCommand*\isodash[1]{\def\iso@isodash{#1}}%
\def\iso@twodigitsign{}
